<?xml version="1.0" encoding="utf-8"?>
<Project 
  ToolsVersion="12.0" 
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <!--InitShim-->
  <Target 
    Name="InitShim"
    BeforeTargets="Proxy"
    Condition="'$(ShimState)'=='$(ShimStateInitId)'"
  >

    <!--self dispatch (to enable logging)-->
    <MSBuild
      Targets="_ExecDispatch"
      Projects="$(ProjFile)"
      Properties="BuildTarget=$(BuildTarget);BuildName=$(BuildTarget)"
    />
  </Target>
  
  <!--PrePostShim-->
  <Target 
    Name="PrePostShim"
    BeforeTargets="Proxy"
    Condition="'$(ShimState)'=='$(ShimStatePrePostId)'"
  >

    <!--before shim target-->
    <MSBuild
      Projects="$(ShimBeforeProject)"
      Targets="$(ShimBeforeTarget)"
    />

    <!--self dispatch-->
    <MSBuild
      Targets="$(BuildTarget)"
      Projects="$(ProjFile)"
      Properties="ShimState=$(NextShimState)"
    />

    <!--after shim target-->
    <MSBuild
      Projects="$(ShimAfterProject)"
      Targets="$(ShimAfterTarget)"
    />
  </Target>

  <!--Shim-->
  <Target 
    Name="Shim"
    BeforeTargets="Proxy"
    Condition="'$(ShimState)'=='$(ShimStateSelfId)'"
  >

    <!--shim references-->
    <MSBuild
      Targets="$(BuildTarget)"
      Projects="$(ProjFile)"
      Properties="ShimDir=%(ShimReference.Identity)"
      Condition="@(ShimReference->Count()) > 0"
    />

    <!--inject shim target(s)-->
    <MSBuild
      Targets="_ExecDispatch"
      Projects="$(ProjFile)"
      Properties="BuildTarget=%(ShimTarget.Identity);BuildName=%(Identity)"
      Condition="
        '$(ShimTarget)'!='' AND
        !@(ShimTarget->AnyHaveMetadataValue('Identity','$(BuildTarget)'))
      "
    />

    <!--expand configurations-->
    <CreateItem
      Include="@(ProjFile)"
      AdditionalMetadata="AdditionalProperties=Configuration=%(Configuration.Identity)$(Sc)BuildName=$(BuildTarget).%(Configuration.Identity)"
    >
      <Output ItemName="ProjFileWithConfig" TaskParameter="Include"/>
    </CreateItem>

    <!--dispatch build target-->
    <MSBuild
      Targets="_ExecDispatch"
      Projects="@(ProjFileWithConfig)"
      Properties="BuildTarget=$(BuildTarget)"
    />
  </Target>

  <!--DumpProjects-->
  <Target Name="DumpProjects">
    <Message Importance="$(Verbosity)" Text="ShimDir: $(ShimDir)" />
    <Message Importance="$(Verbosity)" Text="ShimInclude: $(ShimInclude)" />
    <Message Importance="$(Verbosity)" Text="ShimExclude: $(ShimExclude)" />
    <Message Importance="$(Verbosity)" Text="ShimProjectFiles:" />
    <Message Importance="$(Verbosity)" Text="  %(ShimProjectFiles.FullPath)" />
  </Target>
  
  <!--_ExecDispatch-->
  <Target Name="_ExecDispatch">
    
    <!--BuildCommand += GetLogArguments-->
    <MSBuild 
      Projects="$(ProjFile)"
      Targets="GetLogArguments"
    >
      <Output ItemName="BuildCommand" TaskParameter="TargetOutputs" />
    </MSBuild>
    <Message Importance="$(Verbosity)" Text="Command:" />
    <Message Importance="$(Verbosity)" Text="  %(BuildCommand.Identity)" />

    <!--exec msbuild.exe-->
    <PropertyGroup>
      <BuildCommand>@(BuildCommand, ' ')</BuildCommand>
    </PropertyGroup>
    <Exec 
      Command="$(BuildCommand)" 
      WorkingDirectory="$(MSBuildStartupDirectory)"
    />
  </Target>

  <!--_Dispatch-->
  <Target Name="_Dispatch">
    <MSBuild
      Projects="@(DispatchProjectFiles)"
      Targets="$(BuildTarget)"
      ContinueOnError="true"
      BuildInParallel="true"
      RemoveProperties=""
    />
  </Target>

</Project>