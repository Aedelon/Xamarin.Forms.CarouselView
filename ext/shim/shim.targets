<?xml version="1.0" encoding="utf-8"?>
<Project 
  ToolsVersion="12.0" 
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <!--Proxy-->
  <Target Name="Proxy">
    
    <!--inject shim target(s) in another msbuild process-->
    <MSBuild
      Targets="_ExecDispatch"
      Projects="$(ProjFile)"
      Properties="BuildTarget=%(ShimTarget.Identity)"
      Condition="!@(ShimTarget->AnyHaveMetadataValue('Identity','$(BuildTarget)'))"
    />
    
    <MSBuild
      Targets="_ExecDispatch"
      Projects="$(ProjFile)"
      Properties="BuildTarget=$(BuildTarget)"
    />
  </Target>

  <!--DumpProjects-->
  <Target Name="DumpProjects">
    <Message Importance="$(Verbosity)" Text="ShimProjectFiles:" />
    <Message Importance="$(Verbosity)" Text="  %(ShimProjectFiles.FullPath)" />
  </Target>

  <!--_ExecDispatch-->
  <Target Name="_ExecDispatch">
    <Message Importance="$(Verbosity)" Text="Command:" />
    <Message Importance="$(Verbosity)" Text="  %(BuildCommand.Identity)" />

    <PropertyGroup>
      <BuildCommand>@(BuildCommand, ' ')</BuildCommand>
    </PropertyGroup>
    <Message Importance="high" Text="$(BuildName) ($(BuildTarget)) -> $(BuildLogFile)" />

    <MakeDir Directories="$(BuildLogDir)"/>
    <Exec 
      Command="$(BuildCommand)" 
      WorkingDirectory="$(MSBuildStartupDirectory)"
    />
  </Target>

  <!--_Dispatch-->
  <Target Name="_Dispatch">
    <MSBuild
      Projects="@(ShimProjectFiles)"
      Targets="$(BuildTarget)"
      ContinueOnError="true"
      BuildInParallel="true"
      RemoveProperties=""
    />
  </Target>

</Project>